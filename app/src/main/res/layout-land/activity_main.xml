<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="0dp"
    android:fillViewport="true"
    tools:context="ca.sfu.cmpt276.sudokulang.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="2dp"
            android:padding="6dp"
            android:text="@string/MainActivity_landscape_welcome_text"
            android:textAlignment="center"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="18sp"
            tools:text="@string/welcome_text" />

        <TextView
            android:id="@+id/textView_Learning_lang"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="40dp"
            android:padding="6dp"
            android:text="@string/I_want_to_learn"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_learning_lang"
            android:layout_width="367dp"
            android:layout_height="wrap_content"


            android:layout_below="@id/textView_Learning_lang"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="51dp"
            android:background="@color/yellow"
            android:contentDescription="learning lang"
            android:minHeight="48dp"

            />

        <TextView
            android:id="@+id/textView_Native_lang"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_learning_lang"
            android:layout_alignParentStart="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:text="@string/I_already_know"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_native_lang"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_Native_lang"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-44dp"
            android:layout_marginEnd="51dp"
            android:background="@color/yellow"
            android:contentDescription="native lang"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/textView_Grid_Sizes"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_below="@+id/spinner_native_lang"
            android:layout_marginStart="104dp"
            android:layout_marginTop="20dp"
            android:padding="6dp"
            android:text="@string/GridSize"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_grid_size"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_Grid_Sizes"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-44dp"
            android:layout_marginEnd="51dp"
            android:background="@color/yellow"
            android:contentDescription="grid sizes "
            android:minHeight="48dp" />

        <ImageButton
            android:id="@+id/image_button_next"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="-1dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="next button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_arrow_circle_right_outline_24dp" />

        <ImageButton
            android:id="@+id/image_button_favourites"
            android:layout_width="75dp"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="-8dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="favourites button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_star_outline_24dp" />

        <ImageButton
            android:id="@+id/image_button_settings"
            android:layout_width="76dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="settings button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_settings_outline_24dp" />

        <ImageButton
            android:id="@+id/image_button_history"
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="310dp"
            android:layout_marginTop="-1dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="history button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_history_24dp" />

        <ImageButton
            android:id="@+id/image_button_help"
            android:layout_width="65dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="help button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_help_outline_24dp" />

        <ImageButton
            android:id="@+id/image_button_tutorial"
            android:layout_width="65dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="320dp"
            android:layout_marginBottom="-3dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="tutorial button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_play_circle_outline_24dp" />

    </RelativeLayout>
</ScrollView>