<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:fillViewport="true"
    tools:context="ca.sfu.cmpt276.sudokulang.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="2dp"
            android:padding="6dp"
            android:text="@string/MainActivity_landscape_welcome_text"
            android:textAlignment="center"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/welcome_text" />

        <TextView
            android:id="@+id/textView_Learning_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="6dp"
            android:text="@string/I_want_to_learn"
            android:textAlignment="center"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcome_text" />

        <Spinner
            android:id="@+id/spinner_learning_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:background="@color/yellow"
            android:contentDescription="learning lang"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_Learning_lang" />

        <TextView
            android:id="@+id/textView_Native_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="6dp"
            android:text="@string/I_already_know"
            android:textAlignment="center"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_learning_lang" />

        <Spinner
            android:id="@+id/spinner_native_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:background="@color/yellow"
            android:contentDescription="native lang"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_Native_lang" />

        <TextView
            android:id="@+id/textView_Grid_Sizes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="6dp"
            android:text="@string/GridSize"
            android:textAlignment="center"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_native_lang" />

        <Spinner
            android:id="@+id/spinner_grid_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/yellow"
            android:contentDescription="grid sizes "
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_Grid_Sizes" />

        <ImageButton
            android:id="@+id/image_button_next"
            android:layout_width="69dp"
            android:layout_height="78dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="-1dp"
            android:backgroundTint="@color/mint_green"
            android:contentDescription="next button"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_arrow_circle_right_outline_24dp" />

        <ImageButton
            android:id="@+id/image_button_favourites"
            android:layout_width="96dp"
            android:layout_height="86dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="-8dp"
            android:backgroundTint="@color/mint_green"
            android:contentDescription="favourites button"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star_outline_24dp" />

        <ImageButton
            android:id="@+id/image_button_settings"
            android:layout_width="102dp"
            android:layout_height="77dp"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/mint_green"
            android:contentDescription="settings button"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_settings_outline_24dp" />

        <ImageButton
            android:id="@+id/image_button_history"
            android:layout_width="99dp"
            android:layout_height="76dp"
            android:backgroundTint="@color/mint_green"
            android:contentDescription="history button"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_history_24dp" />

        <ImageButton
            android:id="@+id/image_button_help"
            android:layout_width="92dp"
            android:layout_height="82dp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="@color/mint_green"
            android:contentDescription="help button"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_help_outline_24dp" />

        <ImageButton
            android:id="@+id/image_button_tutorial"
            android:layout_width="81dp"
            android:layout_height="82dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="@color/mint_green"
            android:contentDescription="tutorial button"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_play_circle_outline_24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>