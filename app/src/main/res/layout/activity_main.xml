<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.sfu.cmpt276.sudokulang.MainActivity"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"


    >


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="2dp"
        android:padding="6dp"
        android:text="@string/welcome_text"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="18sp"
        tools:text="@string/welcome_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Indian_states"
        android:layout_below="@+id/welcome_text"
        android:layout_marginTop="55dp"
        android:padding="6dp"
        android:textSize="15sp"
        android:textColor="#555555"
        android:text="@string/I_want_to_learn"

        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/spinner_indian_states"
        android:layout_below="@id/textView_Indian_states"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Indian_districts"
        android:layout_below="@+id/spinner_indian_states"
        android:layout_marginTop="40dp"
        android:padding="6dp"
        android:textSize="15sp"
        android:textColor="#555555"
        android:text="@string/I_already_know"

        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/spinner_indian_districts"
        android:layout_below="@id/textView_Indian_districts"

        />


    <TextView
        android:id="@+id/textView_Grid_Sizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_indian_districts"
        android:layout_marginTop="40dp"
        android:padding="6dp"
        android:text="@string/GridSize"
        android:textColor="#555555"

        android:textSize="15sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/spinner_grid_size"
        android:layout_below="@id/textView_Grid_Sizes"

        />

    <ImageButton
        android:id="@+id/image_button_next"
        android:layout_width="67dp"
        android:layout_height="73dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-1dp"
        android:backgroundTint="@color/blue"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_arrow_circle_right_outline_24dp" />

    <ImageButton
        android:id="@+id/image_button_favourites"
        android:layout_width="84dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-8dp"
        android:backgroundTint="@color/blue"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_star_outline_24dp" />

    <ImageButton
        android:id="@+id/image_button_settings"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/blue"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_settings_outline_24dp" />

    <ImageButton
        android:id="@+id/image_button_history"
        android:layout_width="72dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/ic_history_24dp"
        android:backgroundTint="@color/blue"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/image_button_help"
        android:layout_width="68dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="@color/blue"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_help_outline_24dp" />

    <ImageButton
        android:id="@+id/image_button_tutorial"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="1dp"
        app:srcCompat="@drawable/tutorial"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/blue"/>

</RelativeLayout>